<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="upvictoria.pm_may_ago_2025.iti_271415.pg1u3_eq06">

    <!-- Permisos requeridos -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Requisitos de hardware para AR -->
    <uses-feature android:name="android.hardware.camera.ar" android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Z_U3_271415_E_06"
        tools:targetApi="31">

        <meta-data
            android:name="android.backup.AUTO_BACKUP"
            android:value="true" />
        <meta-data
            android:name="android.backup.DATA_EXTRACTION_RULES"
            android:resource="@xml/data_extraction_rules" />
        <meta-data
            android:name="android.backup.FULL_BACKUP_CONTENT"
            android:resource="@xml/backup_rules" />
        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
